{% extends '@CMS/Admin/_layout.html.twig' %}

{% block title %}{{ 'Structure'|trans }} / {{ parent() }}{% endblock %}

{% set page_header = 'Structure'|trans %}
{% set page_description = 'Управление папками, нодами и областями'|trans %}

{% block styles %}
    {{ parent() }}
    <style media="all" type="text/css"> @import url({{ asset('bundles/felib/jquery-dynatree/1.2.5/src/skin-vista/ui.dynatree.css') }}); </style>
{% endblock %}

{% block scripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/felib/jquery-dynatree/1.2.5/jquery/jquery.cookie.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/felib/jquery-dynatree/1.2.5/jquery/jquery-ui.custom.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/felib/jquery-dynatree/1.2.5/src/jquery.dynatree.js') }}" type="text/javascript"></script>
{% endblock %}

{% block subnav %}
    {{ knp_menu_render('CMSBundle:AdminMenu:structure', {'currentClass': 'active'})  }}
{% endblock subnav %}

{% block content %}
    {{ parent() }}
    {{ include('@CMS/AdminStructure/_tree.html.twig') }}
{% endblock content %}
