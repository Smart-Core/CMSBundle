{% extends '@CMS/AdminUser/index.html.twig' %}

{% block title %}{{ 'Roles'|trans }} / {{ parent() }}{% endblock %}

{% block content %}

<div class="box box-primary">
    <div class="box-header with-border">

        <div class="row">
            <div class="col-md-7">
                <table class="table table-bordered table-hover">
                    <thead><tr>
                        <th style="width: 1%;">#</th>
                        <th>{{ 'Name'|trans }}</th>
                    </tr></thead>
                    <tbody>
                    {% set count = 1 %}
                    {% for role in roles %}
                        <tr>
                            <td>{{ count }}{% set count = count + 1 %}</td>
                            <td><a href="{{ path('cms_admin_user_role_edit', {'id': role.id}) }}">{{ role.name }}</a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

            <div class="col-md-5">
                <h3>{{ 'Create role'|trans }}</h3>
                <form action="" {{ form_enctype(form) }} method="POST" class="well">
                    {{ form_widget(form) }}

                    <div class="control-group">
                        <div class="controls">
                            <button type="submit" name="create" class="btn btn-success"><i class="icon-plus icon-white"></i><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> {{ 'Add'|trans }}</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>

{% endblock content %}
