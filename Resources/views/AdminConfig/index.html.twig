{% extends '@CMS/Admin/_layout.html.twig' %}

{% block title %}{{ 'Configuration'|trans }} / {{ parent() }}{% endblock %}

{% set page_header = 'Configuration'|trans %}

{% block content %}

<div class="box box-success">
    <div class="box-header with-border">

        <h3>{{ 'Media Library'|trans }}</a></h3>

    <a href="{{ path('cms_admin_config_media') }}" class="btn btn-default">Настроить Медиа библиотеку</a>

    <h3>{{ 'Settings'|trans }}</a></h3>

    <table class="table table-bordered table-hover">
        <thead><tr>
            <th>{{ 'Bundle'|trans }}</th>
            <th>{{ 'Name'|trans }}</th>
            <th>{{ 'Value'|trans }}</th>
        </tr></thead>
        <tbody>
        {% for setting in settings %}
            <tr>
                <td>{{ setting.bundle }}</td>
                <td><a href="{{ path('cms_admin_config_edit_setting', {'id': setting.id}) }}">{{ setting.name }}</a></td>
                <td>{{ setting.value }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    </div>
</div>

{% endblock content %}
